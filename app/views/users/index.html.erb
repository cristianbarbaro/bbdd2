<h3>Users</h3>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Administrator</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><% if user.has_role? :admin %>
                SÃ­
            <% else %>
                No
            <% end %>
        </td>
        <td>
          <%= link_to '', user_path(user), class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Show' %>
          <%= link_to '', edit_user_path(user), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Edit}' %>
          <%#= link_to '', user_path(user), class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, title: 'Borrar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
