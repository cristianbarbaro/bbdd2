<h1>Editing Product Application</h1>

<%= render 'form', product_application: @product_application, farm: @farm, plot: @plot %>

<div class="pull-right">
    <%= link_to 'Delete', [@farm, @plot, @product_application], class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %>
    <%= link_to 'Show', [@farm, @plot, @product_application], class: "btn btn-primary" %>
    <%= link_to 'Back', :back, class: "btn btn-default" %>
</div>
