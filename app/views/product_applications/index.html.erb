<h1>Product Applications</h1>

<table class="table">
  <thead>
    <tr>
      <th>amount</th>
      <th>Comment</th>
      <th>Product</th>
      <th>Plot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_applications.each do |product_application| %>
      <tr>
        <td><%= product_application.amount %></td>
        <td><%= product_application.comment %></td>
        <td><%= product_application.product.name %></td>
        <td><%= product_application.plot.identifier %></td>
        <td>
          <%= link_to '', [@farm, @plot, product_application], class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Show' %>
          <%= link_to '', edit_farm_plot_product_application_path(@farm, @plot, product_application), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Edit' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<div class="pull-right">
  <div class="btn-right">
    <%= link_to 'New', new_farm_plot_product_application_path, class: "btn btn-success" %>
  </div>
</div>