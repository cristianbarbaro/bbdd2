<h3>Add new user to <%= @farm.name %></h3>

<form action="<%= farm_add_user_path %>" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="formGroupUser">User</label>
    <%= select("user", "user_id", User.all.collect {|u| [ u.email, u.id ] }, { include_blank: true}, {class: "form-control" }) %>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="Add" class="btn btn-success">
    <a href="<%= farm_path(@farm) %>" class="btn btn-danger">Cancel</a>
  </div>
</form>
